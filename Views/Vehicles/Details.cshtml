@model ExpressVoitures.Data.Vehicle

@{
    ViewData["Title"] = "Details | Véhicule";
    ViewData["NomPage"] = "Détails d'un véhicule";
    ViewData["ControllerName"] = "Vehicles";
    ViewData["ActionName"] = "AdminIndex";
}

<partial name="_AdminPagesTitle" />

<div>
    <h4>Vehicle</h4>
    <hr />
    <dl class="row">
        <div class="d-flex flex-row m-2">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.CodeVIN)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.CodeVIN)
            </dd>
        </div>
        <div class="d-flex flex-row m-2">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Annee)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Annee)
            </dd>
        </div>
        <div class="d-flex flex-row m-2">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Marque)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Marque.Nom)
            </dd>
        </div>
        <div class="d-flex flex-row m-2">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Modele)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Modele.Nom)
            </dd>
        </div>
        <div class="d-flex flex-row m-2">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Finition)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Finition.Nom)
            </dd>
        </div>
        <div class="d-flex flex-row m-2">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.DateAchat)
            </dt>
            <dd class="col-sm-8">
                @Model.DateAchat.ToString("dd/MM/yyyy")
            </dd>
        </div>
        <div class="d-flex flex-row m-2">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.PrixAchat)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.PrixAchat)
            </dd>
        </div>
        <div class="d-flex flex-row m-2">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Reparations)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Reparations)
            </dd>
        </div>
        <div class="d-flex flex-row m-2">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.CoutsReparation)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.CoutsReparation)
            </dd>
        </div>
        <div class="d-flex flex-row m-2">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.DateDisponibiliteVente)
            </dt>
            <dd class="col-sm-8">
                @Model.DateDisponibiliteVente.ToString("dd/MM/yyyy")
            </dd>
        </div>
        <div class="d-flex flex-row m-2">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.PrixVente)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.PrixVente)
            </dd>
        </div>
        <div class="d-flex flex-row m-2">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.DateVente)
            </dt>
            <dd class="col-sm-8">
                @if (Model.DateVente.HasValue)
                {
                    @Model.DateVente.Value.ToString("dd/MM/yyyy")
                }
                else
                {
                    <span>Véhicule non vendu</span>
                }
            </dd>
        </div>
        <div class="d-flex flex-row m-2">
            <dt class="col-sm-4">
                Annonce publique
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.IsPublished)
            </dd>
        </div>
        <div class="d-flex flex-row m-2">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Description)
            </dd>
        </div>
    </dl>
</div>
<div>

    <partial name="_DetailsNavPartial" model="Model" />
</div>
