@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@model IEnumerable<ExpressVoitures.Data.Vehicle>

@{
    ViewData["Title"] = "Annonces";
}

<h1>Annonces</h1>

@if (SignInManager.IsSignedIn(User))
{
    <p>
        <a asp-action="Create">Ajouter une annonce</a>
    </p>
}
<section id="offer-section" class="flex-row align-items-center justify-content-start">
    @foreach (var item in Model)
    {
        <div id="vehicle-@item.Id-block" class="card w-25">
            <a asp-action="Details" asp-route-id="@item?.Id" class="text-black text-decoration-none">
                <figure class="card-header">
                    <div class="image-container">
                        <img class="card-img" src="@(item.Images != null && item.Images.Any() ? item.Images.FirstOrDefault().ImageLink : "/img/general/media-unavailable.png")" />
                    </div>
                    <figcaption class="card-body flex-column">
                        <div class="d-flex justify-content-between card-text">
                            <span>@Html.DisplayFor(modelItem => item.Marque.Nom) @Html.DisplayFor(modelItem => item.Modele.Nom) @Html.DisplayFor(modelItem => item.Finition.Nom)</span>
                            <span>@Html.DisplayFor(modelItem => item.Annee)</span>
                        </div>
                        <div class="d-flex justify-content-between card-text">
                            @Html.DisplayFor(modelItem => item.PrixVente, new { @class = "fw-bold" })€
                            @if (SignInManager.IsSignedIn(User))
                            {
                                <a asp-action="Edit" asp-route-id="@item?.Id">Edit</a>
                            }
                        </div>
                    </figcaption>
                </figure>
            </a>
        </div>
    }
</section>
