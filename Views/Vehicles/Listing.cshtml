@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@model ExpressVoitures.Data.Vehicle

@{
    ViewData["Title"] = Model.Marque.Nom + " " + Model.Modele.Nom;
    var images = Model.Images.ToList();
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div class="d-flex justify-content-between align-items-center">
        <a asp-action="Index" class="btn btn-secondary">Retour</a>
        <h1>@Model.Marque.Nom @Model.Modele.Nom</h1>
    </div>
    <div>
        <h3 class="d-flex justify-content-between align-items-center">@Model.PrixVente €</h3>
    </div>
</div>
<div>
    <!-- Galerie d'images -->
    <div class="gallery">
        <div class="row">
            <div class="col-12 mb-3">
                <div class="ratio-16-9">
                    <a href="@(images.FirstOrDefault()?.ImageLink ?? "/img/general/media-unavailable.png")" target="_blank">
                        <img src="@(images.FirstOrDefault()?.ImageLink ?? "/img/general/media-unavailable.png")" class="img-fluid main-image" alt="Main Image">
                    </a>
                </div>
            </div>
            @for (int i = 1; i < images.Count; i++)
            {
                <div class="col-4 mb-3">
                    <a href="@images[i].ImageLink" target="_blank">
                        <img src="@images[i].ImageLink" class="img-fluid thumbnail-image" alt="Image @i">
                    </a>
                </div>
            }
        </div>
    </div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CodeVIN)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CodeVIN)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Annee)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Annee)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateAchat)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateAchat)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PrixAchat)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PrixAchat)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateDisponibiliteVente)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateDisponibiliteVente)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PrixVente)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PrixVente)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateVente)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateVente)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Marque)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Marque.Nom)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Modele)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Modele.Nom)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Finition)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Finition.Nom)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>
<div>    
    @if (SignInManager.IsSignedIn(User))
    {
        <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> 
        <a asp-action="AdminIndex">Retour liste admin</a>
    }
</div>
