@model ExpressVoitures.Data.CarBrand

@{
    ViewData["Title"] = "Suppression | Marque";
    ViewData["ControllerName"] = "CarBrands";
    ViewData["ActionName"] = "Index";
    ViewData["NomPage"] = "Supprimer une marque";
}

<partial name="_AdminPagesTitle" />

<h3>Êtes-vous sûr de vouloir supprimer la marque?</h3>
<p>Tous les modèles associés à cette marque seront également supprimés</p>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nom)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nom)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Supprimer" class="btn btn-danger" />
    </form>
</div>
