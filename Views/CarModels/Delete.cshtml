@model ExpressVoitures.Data.CarModel

@{
    ViewData["Title"] = "Suppression | Modèle";
    ViewData["ControllerName"] = "CarModels";
    ViewData["ActionName"] = "Index";
    ViewData["NomPage"] = "Supprimer un modèle";
}

<partial name="_AdminPagesTitle" />

<h3>Êtes-vous sûr de voloir supprimer ce modèle?</h3>
<p>Toutes les finitions associées à ce modèle seront supprimées</p>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nom)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nom)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Marque)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Marque.Nom)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Supprimer" class="btn btn-danger" />
    </form>
</div>
