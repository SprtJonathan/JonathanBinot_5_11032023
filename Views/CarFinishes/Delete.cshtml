@model ExpressVoitures.Data.CarFinish

@{
    ViewData["Title"] = "Suppression | Finition";
    ViewData["ControllerName"] = "CarFinishes";
    ViewData["ActionName"] = "Index";
    ViewData["NomPage"] = "Supprimer une finition";
}

<partial name="_AdminPagesTitle" />

<h3>Êtes-vous sûr de vouloir supprimer cette finition?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nom)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nom)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Modele)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Modele.Id)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Supprimer" class="btn btn-danger" />
    </form>
</div>
