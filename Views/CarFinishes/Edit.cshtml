@model ExpressVoitures.Data.CarFinish

@{
    ViewData["Title"] = "Modification | Finition";
    ViewData["ControllerName"] = "CarFinishes";
    ViewData["ActionName"] = "Index";
    ViewData["NomPage"] = "Modifier une finition";
}

<partial name="_AdminPagesTitle" />

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Modele.Marque.Nom" class="control-label"></label>
                <input type="text" class="form-control" value="@ViewData["MarqueNom"]" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Modele.Nom" class="control-label"></label>
                <input type="text" class="form-control" value="@ViewData["ModeleNom"]" disabled />
                <input type="hidden" asp-for="ModeleId" />
            </div>
            <div class="form-group">
                <label asp-for="Nom" class="control-label"></label>
                <input asp-for="Nom" class="form-control" />
                <span asp-validation-for="Nom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Sauvegarder" class="btn button-annonce-filtre" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
